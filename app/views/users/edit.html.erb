<%= link_to("<< Back to User's List", {:action => 'index'}, :class => 'back-link') %>

<div class="user edit">
	<h2>Update User</h2>

	<%= form_for(:user, :url => {:action => 'update', :id => @user.id}) do |f| %>

	<table summary="User form fields">
		<tr>
			<th>Name</th>
			<td><%= f.text_field(:name) %></td>
		</tr>
	</table>

	<div class="form-buttons">
		<%= submit_tag("Update User") %>
	</div>

  <% end %>
 </div>

