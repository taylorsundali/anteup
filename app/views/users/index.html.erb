<div class="users index">
  <h2>Users</h2>

  <%= link_to("Add New User", '#', :class => 'action new') %>

  <table class="listing" summary="user list">
    <tr class="header">
      <th>Username</th>
      <th>Password</th>
      <th>Status</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Display Name</th>
    </tr>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.password %></td>
      <td><%= user.status %></td>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.display_name %></td>
      <br>
      <td class="actions">
        <%= link_to("Show", {:action => 'show', :id => user.id}, :class => 'action show') %>
        <%= link_to("Edit", '#', :class => 'action edit') %>
        <%= link_to("Delete", '#', :class => 'action delete') %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
